version: '3.8'

services:
  agent:
    image: portainer/agent:latest
    networks:
      - {{ swarm_network_name }}
    environment:
      AGENT_CLUSTER_ADDR: tasks.agent
      AGENT_PORT: {{ portainer_agent_port }}
      LOG_LEVEL: INFO
    ports:
      - target: {{ portainer_agent_port }}
        published: {{ portainer_agent_port }}
        protocol: tcp
        mode: host
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/lib/docker/volumes:/var/lib/docker/volumes
    deploy:
      mode: global
      placement:
        constraints: [node.platform.os == linux]

  portainer:
    image: {{ portainer_image }}
    networks:
      - {{ swarm_network_name }}
    command: -H tcp://tasks.agent:{{ portainer_agent_port }} --tlsskipverify
    volumes:
      - portainer_data:/data
    environment:
      LOG_LEVEL: INFO
    ports:
      - target: {{ portainer_port }}
        published: {{ portainer_port }}
        protocol: tcp
        mode: host
    deploy:
      mode: replicated
      replicas: {{ portainer_replicas }}
      placement:
        constraints: [node.role == manager]
      labels:
        - "traefik.enable=true"
        - "traefik.http.routers.portainer.rule=Host(`{{ domain_portainer }}`)"
        - "traefik.http.routers.portainer.entrypoints=websecure"
        - "traefik.http.routers.portainer.tls=true"
        - "traefik.http.services.portainer.loadbalancer.server.port={{ portainer_port }}"

networks:
  {{ swarm_network_name }}:
    driver: overlay
    external: true

volumes:
  portainer_data:
    driver: local
